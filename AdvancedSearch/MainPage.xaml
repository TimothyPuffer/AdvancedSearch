<UserControl x:Class="AdvancedSearch.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="800"
    Name="uc_main">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Click="Button_Click_1" Tag="0" Margin="10,5,10,5">
                <TextBlock>CanDrop</TextBlock>
            </Button>
            <Button Click="Button_Click_1" Tag="1" Margin="10,5,10,5">
                <TextBlock>ErrorState</TextBlock>
            </Button>
            <Button Click="Button_Click_1" Tag="3" Margin="10,5,10,5">
                <TextBlock>Normal</TextBlock>
            </Button>
            <Button Click="Button_Click_1" Tag="4" Margin="10,5,10,5">
                <TextBlock>NotDrop</TextBlock>
            </Button>
            <Button Name="btn_AddNode" Click="Button_Click" Margin="10,5,10,5">
                <TextBlock>Add Node</TextBlock>
            </Button>
            <ListBox Name="lb_ResourceType" SelectionChanged="lb_ResourceType_SelectionChanged" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10,0,0,0">
                            <Image HorizontalAlignment="Center" Source="{Binding Path=DisplayObject}"></Image>
                            <TextBlock Text="{Binding Path=DisplayName}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListBox>
        </StackPanel>
        <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto">
            <Canvas Name="canvasNodeDisplay" 
                    Background="White"
                    Height="800"
                    Width="700"
                    MouseMove="canvasNodeDisplay_MouseMove"
                    MouseLeftButtonUp="canvasNodeDisplay_MouseLeftButtonUp">
            </Canvas>
        </ScrollViewer>
        <StackPanel Grid.Column="2">
            <TextBlock Name="tb_x"></TextBlock>
            <TextBlock Name="tb_y"></TextBlock>
            <TextBlock Name="tb_xc"></TextBlock>
            <TextBlock Name="tb_yc"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
