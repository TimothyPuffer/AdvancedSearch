<UserControl x:Class="AdvancedSearch.Node_UC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <Rectangle Name="top_part" Height="80" Width="60" Fill="Blue"></Rectangle>
        <StackPanel Name="bottom_part">
            <Line Height="10" Stroke="Black" StrokeThickness="4" ></Line>
            <Ellipse Height="20" Width="20" Fill="Red"></Ellipse>
        </StackPanel>
    </StackPanel>
</UserControl>
